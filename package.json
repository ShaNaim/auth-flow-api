{
    "name": "auth-flow-api",
    "version": "1.0.0",
    "main": "src/server.ts",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "migrate": "npx prisma migrate dev --name",
        "build": "tsc",
        "format": "prettier --write",
        "format-db": "prisma format",
        "token": "generate-token --keyDir off --log off",
        "generate-secret": "node -e \"console.log(require('crypto').randomBytes(64).toString('hex'))\"",
        "check-node": "node -e \"process.exit(process.version === 'v20.16.0' ? 0 : 1)\"",
        "build:prod": "tsup src/index.ts --dts --format esm,cjs --clean",
        "build:watch": "tsc --watch",
        "clean": "rimraf dist",
        "start": "node dist/index.js",
        "start:prod": "cross-env NODE_ENV=production node dist/index.js",
        "dev": "tsx src/server.ts",
        "dev:watch": "nodemon --watch src -e ts,tsx --exec 'npm run dev'",
        "lint": "eslint . --ext .ts,.tsx",
        "lint:fix": "eslint . --ext .ts,.tsx --fix"
    },
    "engines": {
        "node": "=v20.16.0",
