{
    "compilerOptions": {
        "target": "es2016",
        "module": "Node16",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "Node16",
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "@errors/*": ["src/errors/*"],
            "@config/*": ["src/config/*"]
        }
    },
    "exclude": ["node_modules/"],
    "include": ["src/**/*.ts"]
}
